@model List<Worker>

@{
    ViewBag.Title = "Worker Index";
}

<div class="card-deck">

    @foreach (var worker in Model)
    {
    <div class="card m-3">
        <div class="card-header">
            <h3>@worker.Name</h3>
        </div>
        <img class="card-img-top" src="~/images/MarioBros.jfif" asp-append-version="true"/>
        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@worker.Id" class="btn btn-primary">Ver</a>
            <a href="#" class="btn btn-primary">Editar</a>
            <a href="#" class="btn btn-primary">Borrar</a>
        </div>
    </div>
    }
</div>



